{
    "name": "Hanten Jutsushiki",
    "description": "Inverts page colors, works as a instant Dark Mode",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/invert-icon.png",
            "32": "/images/invert-icon.png",
            "48": "/images/invert-icon.png",
            "128": "/images/invert-icon.png"
        }
    },
    "icons": {
        "16": "/images/invert-icon.png",
        "32": "/images/invert-icon.png",
        "48": "/images/invert-icon.png",
        "128": "/images/invert-icon.png"
    },
    "options_page": "options.html"
}